# Configuración del Servidor
PORT=5000
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb://localhost:27017/integra-tea

# JWT Secret (cambiar en producción)
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Cliente URL (para redirecciones después del pago)
CLIENT_URL=http://localhost:4200

# Stripe API Keys (Claves de PRUEBA)
# Obtén tus claves de prueba en: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Stripe Webhook Secret (obtener del dashboard de Stripe al configurar el webhook)
# Para desarrollo local con Stripe CLI: stripe listen --forward-to localhost:5000/api/payments/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
